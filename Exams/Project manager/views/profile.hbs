<h1>My Profile</h1>
<div class="profile-box">
  <img src="{{user.imageUrl}}">
  <div class="profile">
    <div class="info">
      <h3>My Teams</h3>
      {{#each user.teams}}
      <form action="/leave/{{id}}" method="POST">
        <p>{{name}}</p>
        <input type="submit" value="Leave Team">
      </form>
      {{else}}
      <p>No teams assigned yet</p>
      {{/each}}
    </div>
    <div class="more-info">
      <h3>My Projects</h3>
      {{#each projects}}
      <p>{{name}}</p>
      {{else}}
      <p>No teams yet</p>
      {{/each}}
    </div>
  </div>
</div>