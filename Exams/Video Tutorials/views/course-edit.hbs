<form class="text-center border border-light p-5" action='/editCourse/{{course._id}}' method="POST">
    <h1>Edit Course</h1>
    <div class="form-group">
        <label for="title">Course Title</label>
        <input type="text" class="form-control" name="title" id="title" value="{{course.title}}">
    </div>
    <div class="form-group">
        <label for="description">Course Description</label>
        <textarea class="form-control" name="description" id="description">{{course.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="imageUrl">Image url</label>
        <input type="text" class="form-control" name="imageUrl" id="imageUrl" value="{{course.imageUrl}}">
    </div>
    <div class="form-check">
        {{#if course.public}}
        <input type="checkbox" class="form-check-input" id="check-box" name="public" checked>
        {{else}}
        <input type="checkbox" class="form-check-input" id="check-box" name="public">
        {{/if}}
        <label class="form-check-label" for="check-box">Public</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>